type Query {
}

extend type Query {
    allPlaces: [Place]
}

extend type Query {
    findPlaceById(id: ID!): Place
}

type Place {
    id: ID
    name: String
    address: String
    website: String
    app: Boolean
    orderAhead: Boolean
    placeHours: [PlaceHour]
    reward: Reward
}

type PlaceHour {
    id: ID
    dayOfWeek: String
    openTime: String
    closeTime: String
}

type Reward {
    id: ID
    notes: String
    rewardType: String
}
